@model IEnumerable<CUF.Models.SupplierModel>

@{
    ViewData["title"] = "Lista de fornecedores";
}

@section css {
    <style>
        .new-supplier {
            gap: 10px;
            width: 40%;
            height: 50px;
            font-size: 1.2rem;
        }

        .search .btn-squarred {
            width: 10vw;
        }

        .search .add {
            width: 5vw;
        }

        .search {
            display: flex;
            padding: 0px;
            gap: 15px;

            height: 50px;
            width: 100%;
        }

        .bar {
            flex-grow: 1;
            border-radius: 4px;
        }

        .container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table,
        td {
            border-bottom: 1px solid #ddd;
            border-collapse: collapse;
        }

        table,
        th {
            border-bottom: 2px solid #ddd;
            border-collapse: collapse;
        }

        table .btn-squarred {
            display: inline-block;
            width: 4vw;
            text-align: center;
        }

        table .table-name {
            min-width: 30vw;
            max-width: 60vw;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
        }

        h1 {
            text-align: center;
            font-size: 1.7rem;
            color: var(--primary-color);
        }
    </style>
}


@if (Model.Count() == 0)
{
    <h1>Nenhum fornecedor encontrado</h1>
    <a class="btn-squarred btn-squarred-primary new-supplier" asp-controller="Supplier" asp-action="Create">
        <span class="material-symbols-outlined">
            add_circle
        </span>
        Clique aqui para adicionar um novo fornecedor
    </a>
}
else
{
    <div class="search">
        <input class="form-group bar" type="text" placeholder="Digite sua busca...">
        <a href="#" class="btn-squarred btn-squarred-primary">Buscar</a>
        <a class="btn-squarred btn-squarred-success add" asp-controller="Supplier" asp-action="Create">
            <span class="material-symbols-outlined">
                add_circle
            </span>
        </a>
    </div>
    <table>
        <tr>
            <th>ID</th>
            <th class="table-name">Nome</th>
            <th>CNPJ</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
        @foreach (var fornecedor in Model)
        {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@(fornecedor.Trade != null ? fornecedor.Trade : fornecedor.Company)</td>
                <td>@fornecedor.CNPJ</td>
                <td>@fornecedor.Phone</td>
                <td>
                    <a class="btn-squarred btn-squarred-primary" asp-controller="Supplier" asp-action="Details">
                        <span class="material-symbols-outlined">info</span>
                    </a>
                    <a class="btn-squarred btn-squarred-success add" asp-controller="Supplier" asp-action="Edit">
                        <span class="material-symbols-outlined">edit</span>
                    </a>
                </td>
            </tr>
        }
    </table>
}
