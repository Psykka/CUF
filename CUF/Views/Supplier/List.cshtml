@{
    ViewData["title"] = "Lista de fornecedores";
}

@section css {
<style>
    .btn-buscar {
        background: #6C2020;
        color: #fff;

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 6px 0px;
        gap: 10px;

        flex: none;
        order: 1;
        align-self: stretch;
        flex-grow: 0;

        width: 15%;
        border-radius: 4px;
    }

    .search {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px;
        gap: 15px;

        height: 50px;
        width: 100%;

        border-radius: 2px;

        flex: none;
        order: 0;
        align-self: stretch;
        flex-grow: 0;
    }

    .bar {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 10px;
        gap: 10px;
        flex: none;
        order: 0;
        align-self: stretch;
        flex-grow: 1;
        border-radius: 4px;
    }
</style>
}

<div class="search">
    <input class="form-group bar" type="text" placeholder="Digite sua busca...">
    <a href="#" class="btn-buscar">Buscar</a>
</div>