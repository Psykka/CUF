@{
    Layout = null;
    var error = TempData["Error"];
}

<!DOCTYPE html>

<html>

<head>
    <title>CUF Login</title>
    <link rel="stylesheet" href="~/CUF.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/land/land.css" media="screen" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" />
</head>
<style>
    .content {
        height: 100vh;
    }

    h1 {
        font-size: 2.4rem;
        color: var(--primary-color);
    }

    p {
        font-size: 0.8rem;
    }

    .btn {
        width: 70%;
    }

    .alert {
        color: var(--danger-color);
    }
</style>

<body>
    <div class="content">
        <h1>Login</h1>
        <p>Use seu email e senha para logar</p>
        @if (error != null)
        {
            <div class="alert" role="alert">
                @error
            </div>
        }
        <form class="login-form" method="post" asp-controller="User" asp-action="Login">
            <div class="form-group form-input">
                <span class="material-symbols-outlined">mail</span>
                <input type="email" class="form-control" name="Email" placeholder="Email" required>
            </div>
            <div class="form-group form-input">
                <span class="material-symbols-outlined">lock</span>
                <input type="password" class="form-control" name="Password" placeholder="Senha" required>
            </div>
            <button type="submit" class="btn btn-primary">Logar</button>
        </form>
    </div>
</body>

</html>