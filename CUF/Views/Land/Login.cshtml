@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <title>CUF Login</title>
    <link rel="stylesheet" href="~/CUF.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/land/land.css" media="screen" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" />
</head>
<style>
    .content {
        height: 100vh;
    }

    h1 {
        font-size: 2.4rem;
        color: #6C2020;
    }

    p {
        font-size: 0.8rem;
    }

    .btn {
        background: #6C2020;
        color: #fff;
        width: 70%;
        border: none;
    }

    .btn:hover {
        background: #fff;
        color: #6C2020;
    }
</style>

<body>
    <div class="content">
        <h1>Login</h1>
        <p>Use seu email e senha para logar</p>
        <form class="login-form" method="post" asp-controller="User" asp-action="Login">
            <div class="form-group">
                <span class="material-symbols-outlined">mail</span>
                <input type="email" class="form-control" id="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <span class="material-symbols-outlined">lock</span>
                <input type="password" class="form-control" id="password" placeholder="Senha" required>
            </div>
            <button type="submit" class="btn btn-primary">Logar</button>
        </form>
    </div>
</body>

</html>