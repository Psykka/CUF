<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/land/land.css" media="screen" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" />
    <title>@ViewData["Title"] - CUF</title>
</head>

@await RenderSectionAsync("css", required: false)
<style>
    .material-symbols-outlined {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 0px 4vw;
        gap: 4vw;

        background: var(--primary-color);

        flex: none;
        order: 0;
        align-self: stretch;
        flex-grow: 0;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px;
        gap: 2vw;

        flex: none;
        order: 1;
        flex-grow: 0;
    }

    li {
        color: #fff;
        font-size: 0.9rem;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    h1 {
        text-align: center;
        font-size: 1.7rem;
        color: var(--primary-color);
        margin: 10px 0px;
    }

    .container {
        padding: 20px;
    }
</style>

<body>
    <header>
        <img src="~/assets/logo2.png" width="170" alt="CUF">
        <nav>
            <ul>
                <li><a asp-controller="Product" asp-action="List">Produtos/Serviços</a></li>
                <li><a asp-controller="Order" asp-action="List">Pedidos</a></li>
                <li><a asp-controller="Supplier" asp-action="List">Fornecedores</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-controller="User" asp-action="List">Usuários</a></li>
                }
                <li><a asp-controller="User" asp-action="Logout">Sair</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script type="text/javascript">
        const host = location.href.split('/').slice(0, 3).join('/')
        const productTypes = {
            1: 'Produto',
            2: 'Serviço'
        }

        const locale_pt = {
            UNIT: {
                'Unit': 'Unidade',
                'Kg': 'Kg',
                'L': 'L',
                'M': 'm',
                'M2': 'm²',
                'M3': 'm³',
                'Box': 'Caixa',
                'Pallet': 'Pallet',
                'Package': 'Pacote',
                'Other': 'Outro'
            }
        }

        const getProductType = (type) => {
            return productTypes[type] || 'Desconhecido'
        }

        const getUnit = (unit) => {
            return locale_pt.UNIT[unit] || 'Desconhecido'
        }
    </script>
    @await RenderSectionAsync("scripts", required: false)
</body>

</html>