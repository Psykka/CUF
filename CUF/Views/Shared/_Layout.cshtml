<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/land/land.css" media="screen" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" />
    <title>@ViewData["Title"] - CUF</title>
</head>

@await RenderSectionAsync("css", required: false)
<style>
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 0px 4vw;
        gap: 4vw;

        background: #6C2020;

        flex: none;
        order: 0;
        align-self: stretch;
        flex-grow: 0;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px;
        gap: 2vw;

        flex: none;
        order: 1;
        flex-grow: 0;
    }

    li {
        color: #fff;
        font-size: 0.9rem;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .container {
        padding: 20px;
    }
</style>

<body>
    <header>
        <img src="~/assets/logo.png" width="80" alt="CUF">
        <nav>
            <ul>
                <li><a href="#">Produtos/Serviços</a></li>
                <li><a href="#">Cadastro fornecedor</a></li>
                <li><a href="#">Lista fornecedor</a></li>
                <li><a href="#">Sair</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>